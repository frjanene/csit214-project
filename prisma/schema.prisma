// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// 1. Defines how Prisma connects to your database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Lấy chuỗi kết nối từ file .env
}

// 2. Defines the Prisma Client generator
generator client {
  provider = "prisma-client-js"
}


// 3. ====== YOUR DATABASE MODELS START HERE ======

// Enum for User Roles
enum UserRole {
  CUSTOMER
  ADMIN
}

// User Model: Stores information about registered users
model User {
  id              String    @id @default(cuid()) // Unique ID for each user
  name            String?                       // User's full name, optional
  email           String    @unique                 // User's email, must be unique
  hashedPassword  String?                       // Hashed password, optional for social logins
  role            UserRole  @default(CUSTOMER)  // User's role, defaults to CUSTOMER

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Add relations to other models here later
  // bookings Booking[]
  // membership Membership?
}

// Lounge Model: Stores information about each airport lounge
model Lounge {
  id           String   @id @default(cuid()) // Unique ID for each lounge
  name         String                        // e.g., "FlyDreamAir Premium Lounge"
  airportCode  String                        // e.g., "SYD", "SIN"
  location     String                        // e.g., "Terminal 1, after security"
  capacity     Int                           // Maximum number of people
  amenities    String[]                      // List of amenities, e.g., ["Wi-Fi", "Showers", "Champagne Bar"]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Add relations here later
  // bookings Booking[]
}